<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Fundo degrade azul -->
        <View
            android:id="@+id/fundoAzul"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/degrade_fundo_perfil"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPerfil"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="128dp"
            android:elevation="6dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/perfil_default"
            app:strokeColor="@color/teal_700"
            app:strokeWidth="4dp"
            app:shapeAppearanceOverlay="@style/CircularShapeAppearance" />


        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rodrigo Santos"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cargo -->
        <TextView
            android:id="@+id/txtCargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Operário de Produção"
            android:textColor="#666"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txtNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card com estatísticas -->
        <LinearLayout
            android:id="@+id/cardStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_perfil"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtCargo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:gravity="center">

            <!-- Diária -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tarDiariaValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diária"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#3FBFD8" />

            <!-- Realocadas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tarRealocadasValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRealocadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realocadas"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#3FBFD8" />

            <!-- Não Feitas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tarNaoFeitasValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNaoFeitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não Feitas"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#3FBFD8" />

            <!-- Totais -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tarTotaisValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Totais"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
