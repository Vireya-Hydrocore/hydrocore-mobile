<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:padding="16dp">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtTurbidez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Turbidez"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/turbidezLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTurbidez"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NTU"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtPH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pH"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/blue"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0–14"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtCor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cor"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/corLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/blue"
                    app:endIconMode="dropdown_menu"
                    app:endIconTint="@color/blue">

                    <AutoCompleteTextView
                        android:id="@+id/cbCor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="   Cor"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/volumeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/blue"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputVolume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="m³"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtAluminaResidual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alumina Residual"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/aluminaResidualLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/blue"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAluminaResidual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtAlcalinidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alcalinidade"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/alcalinidadeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/blue"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAlcalinidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L CaCO₃"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>
