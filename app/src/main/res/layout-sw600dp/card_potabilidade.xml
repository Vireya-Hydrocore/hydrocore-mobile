<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <LinearLayout
            android:id="@+id/rowPhDureza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtPh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pH"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PhLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pH"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#040404" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtDureza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dureza"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/durezaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDureza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#070707" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowSolidosCloraminas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtSolidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sólidos Totais"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/solidosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputSolidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#0D0D0D" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtCloraminas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloraminas"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cloraminasLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputCloraminas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#090909" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowSulfatoCondutividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtSulfato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sulfato"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sulfatoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputSulfato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#161616" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtCondutividade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Condutividade"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/condutividadeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputCondutividade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="µS/cm"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#090909" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowCarbonoTrihalometanos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txtCarbonoOrganico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carbono Orgânico"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/carbonoOrganicoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputCarbonoOrganico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#090909" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtTrihalometanos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trihalometanos"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#2995B2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/trihalometanosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#2995B2"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTrihalometanos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="µg/L"
                        android:inputType="numberDecimal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#070707" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTurbidez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtTurbidez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turbidez"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#2995B2" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/turbidezLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="#2995B2"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTurbidez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NTU"
                    android:inputType="numberDecimal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#0B0B0B" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalcularPotabilidade"
            style="@style/BotaoPadraoAzul"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="Calcular Potabilidade"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtResultadoPotavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Potável"
            android:textColor="#2995B2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarPotabilidade"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.cardview.widget.CardView>
